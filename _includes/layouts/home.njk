---
layout: layouts/base.njk
templateClass: tmpl-home
image1: /img/donkey.jpg
image1Alt: image of a donkey
image2: /img/zebra.jpg
image2Alt: image of a zebra
image3: /img/camel.jpg
image3Alt: image of a camel
---
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="{{image1}}" class="d-block w-100" alt="{{image1Alt}}">
            <div class="carousel-caption d-none d-md-block">
                <p class="slideTitle">First slide</p>
                <p>First slide text</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="{{image2}}" class="d-block w-100" alt="{{image2Alt}}">
            <div class="carousel-caption d-none d-md-block">
                <p class="slideTitle">Second slide</p>
                <p>Second slide text</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="{{image3}}" class="d-block w-100" alt="{{image3Alt}}">
            <div class="carousel-caption d-none d-md-block">
                <p class="slideTitle">Third slide</p>
                <p>Third slide text</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>
{{ content | safe }}